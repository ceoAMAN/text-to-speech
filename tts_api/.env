# Environment variables for the TTS API
PORT=8000
HOST="0.0.0.0"
LOG_LEVEL=INFO
MODEL_PATH="models/"

# PyTorch settings
CUDA_VISIBLE_DEVICES=0  # Set to "" to use CPU only

# API settings
MAX_TEXT_LENGTH=500
ENABLE_CACHING=true
CACHE_DIR="cache/"
TEMP_AUDIO_DIR="temp_audio/"

# Security
# CORS allowed origins, comma-separated
CORS_ALLOW_ORIGINS="*"